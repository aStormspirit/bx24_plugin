# Используем базовый образ Node.js
FROM node:alpine

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /usr/src/app

# Копируем файлы определения зависимостей
COPY package.json yarn.lock ./

# Устанавливаем зависимости
RUN yarn install

# Копируем остальной исходный код сервера
COPY . .

# Объявляем порт, на котором будет работать сервер
EXPOSE 3000

# Запускаем Express.js сервер
CMD [ "node", "server.js" ]